# Log items
snippet _error
	LogItem ${1:xxx}_error(TRACEGROUP, "$1_error", 3, 3);
snippet error(
	${1:xxx}_error(FILELINE, "${2}");
snippet _warning
	LogItem ${1:xxx}_warning(TRACEGROUP, "$1_warning", 3, 3);
snippet warning(
	${1:xxx}_warning(FILELINE, "${2}");
snippet _info
	LogItem ${1:xxx}_info(TRACEGROUP, "$1_info", 3, 3);
snippet info(
	${1:xxx}_info(FILELINE, "${2}");
snippet _debug
	LogItem ${1:xxx}_debug(TRACEGROUP, "$1_debug", 0, 0);
snippet debug(
	${1:xxx}_debug(FILELINE, "${2}");
snippet _trace
	LogItem ${1:xxx}_trace(TRACEGROUP, "$1_trace", 0, 0);
snippet trace(
	${1:xxx}_trace(FILELINE, "${2}");
snippet _dump
	LogItem ${1:xxx}_dump(TRACEGROUP, "$1_dump", 0, 0);
snippet dump(
	${1:xxx}_dump(FILELINE, "${2}%s", hexdump(${3}));
snippet fsmdcl
