		public:
			$1();
			virtual ~$1();

		public:
			// Implements Procedure::name()
			virtual const char* name() const;

		protected:
			// Transitions
	};
snippet fsmdef
	// States
	enum {
		S_IDLE = 0,
		S_END
	};
	
	// Procedure internal events
	enum {
		EID_XXX = EID_INTERNAL_MIN,
	};

	${1:}::$1() :
		ProcedureFSM()
	{
		// Set initial state
		setState(S_IDLE);

		// Dump FSM
		dumpFSM();
	}

	$1::~$1()
	{
	}

	const char* $1::name() const
	{
		return "$1";
	}
snippet fsmat
	fsmAddEventTrans(${1:S_CURR}, ${2:EID_},
	    ${3:transition},
	    ${4:S_NEXT}, ${5:Procedure::RC_});

